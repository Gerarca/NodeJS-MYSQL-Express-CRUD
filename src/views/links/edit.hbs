<div class="container p-4 mx-auto px-0">
    <div class="row mx-auto px-0">
        <div class="col-md-4 mx-auto px-0">
            <div class="border border-secundary mx-auto p-3">
                <div class="mx-auto px-0">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group text-center px-0 h2">
                            Editar Nota
                        </div>                    
                        <div class="form-group mx-auto px-0">
                            <input 
                                type="text"
                                class="form-control"
                                name="title"
                                placeholder="Titulo"
                                autofocus="true"
                                value={{link.title}}
                                required
                            />
                        </div>
                        <div class="form-group">
                            <input 
                                type="url"
                                class="form-control"
                                name="url"
                                placeholder="http://example.com"
                                value={{link.url}}
                                required
                            />
                        </div> 
                        <div class="form-group">
                            <textarea
                                class="form-control text-left"
                                name="description"
                                rows="2"
                                placeholder="Descripcion"                                
                                required
                            >
                            {{link.description}}
                            </textarea>
                            
                        </div> 
                        <div class="form-group">
                            <button
                                class="btn btn-success btn-block"
                            >
                                Guardar
                            </button>
                        </div
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>>