<div class="container p-4">
    <div class="row">

        {{#each links}}
            <div class="col-md-3 py-2">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_BLANK"> <h3 class="card-title text-uppercase"> {{title}} </h3> </a>
                        <p class="m-2">{{description}}</p>
                    </div>
                    <p>{{timeago created_at}}</p>
                    <a href="/links/delete/{{id}}" class="btn btn-danger m-2"> Borrar Linlk </a>
                    <a href="/links/edit/{{id}}" class="btn btn-secondary m-2"> Editar Link </a>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No Tienes notas registradas.</p>
                    <a href="/links/add">Crear Unae</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>